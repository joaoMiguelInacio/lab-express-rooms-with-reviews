<h2>{{room.name}}</h2>

{{#if isOwner }}
    <h3>(Welcome back {{user.username}}, You own this room.)</h3>
    <span>
        <form action="/rooms/{{this._id}}/rooms-delete" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form> 
    </span>
    <span>
        <form action="/rooms/{{this._id}}/rooms-edit" method="get">
            <button type="submit" class="btn btn-danger">Edit</button>
        </form> 
    </span>
{{/if}}

{{#if isUser }}
    <span>
        <form action="/rooms/{{room._id}}/reviews-create" method="get">
            <button type="submit" class="btn btn-danger">Review</button>
        </form> 
    </span>
{{/if}}

<hr>
<h3>Description</h3>
<p>{{room.description}}</p>
<img class="details-image" src="{{room.imageUrl}}">

{{#if room.reviews}}
    <hr>
    <h3>Review:</h3>
    {{#each room.reviews}}
        <li><b>Comment:</b>
            <ul>
                <li>{{this.comment}}</li>
                <li>{{this.user.username}}</li>
                <li>
                    <a class="btn btn-secondary" href="/reviews/{{this._id}}/reviews-edit">Edit Review</a>
                    </li>
                <li>            
                    <form action="/reviews/{{this._id}}/reviews-delete" method="post">
                        <button type="submit" class="btn btn-danger">Delete Review</button>
                    </form>
                </li>
            </ul>
        </li>
    {{/each}}
{{/if}}

{{#if isUser }}
    <li><b>Owner:</b>
        <ul>
            <li>{{room.owner.username}}</li>
        </ul>
    </li>
{{/if}}