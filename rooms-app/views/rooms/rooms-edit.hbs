<h2>Update {{title}}</h2>

<form action="/rooms/{{_id}}/rooms-edit" method="post">
  <div class="mb-3">
    <label for="title" class="form-label">Name</label>
    <input required maxlength="250" type="text" class="form-control" name="name" value="{{name}}">
  </div>
  <div class="mb-3">
    <label for="genre" class="form-label">Description</label>
    <input required type="text" class="form-control" name="description" value="{{description}}">
  </div>
  <div class="mb-3">
    <label for="plot" class="form-label">ImageURL</label>
    <input type="text" class="form-control" name="imageUrl" value="{{imageUrl}}">
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>